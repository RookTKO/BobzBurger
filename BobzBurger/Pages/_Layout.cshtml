<!DOCTYPE html>
<html>
<head>
    <title>Bob's Burgers</title>
    <link rel="stylesheet" href="~/site.css" />
</head>
<body>
    <header class="container site-header">
        <div class="row">
            <h1 class="main-logo"><a href="/">Bob's Burgers</a></h1>
        </div>
        <div class="row ">
            <nav class="navbar">
                <ul class="nav nav-pills ">
                    <li><a class="active" href="/Index">Home Page</a></li>
                    <li><a href="/Menu">Our Burgers</a></li>
                    <li><a href="/Comments">Rate us!</a></li>
                    <li><a href="/About">About</a></li>
                    <li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a class="login" href="/Account/Login">Bob's Login</a>
                        }
                        else
                        {
                            <form method="post" asp-page="/Account/Login" asp-page-handler="Logout">
                                <div class="input-group">
                                    <span>@User.Identity.Name</span>
                                    <button type="submit" class="btn btn-link">Logout</button>
                                </div>
                            </form>
                        }
                    </li>
                </ul>
            </nav>
        </div>
        <div class="row">
            @if (IsSectionDefined("Title"))
            {
                @RenderSection("Title", required: false)
            }
            else
            {
                <h2 class="title">@ViewData["Title"]</h2>
            }
        </div>
    </header>
    <div class="container">
    
        @RenderBody()
    </div>
    <footer>
        <div class="text-center">
            <span class="text-muted">Last Rendered:  @DateTime.Now  </span>
        </div>
    </footer>
</body>
</html>