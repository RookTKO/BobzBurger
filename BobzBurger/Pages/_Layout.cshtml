<!DOCTYPE html>
<html>
<head>
    <title>Bob's Burgers</title>
    <link rel="stylesheet" href="~/site.css" />
</head>
<body>
    <header class="container site-header">
        <div class="row">
            <h1 class="main-logo">
                <a href="/"></a>
                <img class="banner" style="transform: rotate(1deg);" src="~/Images/reopening.png" />

            </h1>

        </div>
        <div class="row ">
            <nav class="navbar">
                <ul class="nav nav-pills ">
                    <li><a href="/Index">Home Page</a></li>
                    <li><a href="/Menu">Our Burgers</a></li>
                    <li><a href="/RateUs">Rate us!</a></li>
                    <li><a href="/About">About</a></li>
                    <li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a class="login" href="/Account/Login">Bob's Login</a>
                        }
                        else
                        {
                            <form method="post" asp-page="/Account/Login" asp-page-handler="Logout">
                                <div class="input-group">
                                    <button id="btn_login" type="submit" class="btn-link">Logout</button>
                                </div>
                            </form>
                        }
                    </li>
                </ul>
            </nav>
        </div>
        <div class="row">
            @if (IsSectionDefined("Title"))
            {
                @RenderSection("Title", required: false)
            }
            else
            {
                <h2 class="title">@ViewData["Title"]</h2>
            }
        </div>
    </header>
    <div class="container">

        @RenderBody()
    </div>
    <!-- Footer -->
    @*<footer>
        //TODO : do footer? maybe
    </footer>*@
    <!-- Footer -->
</body>
</html>