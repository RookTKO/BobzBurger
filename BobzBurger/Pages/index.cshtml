@page
@{
    var recipes = await RecipesService.GetAllAsync();
    Random r = new Random();
    int rInt = r.Next(0, recipes.Length);
}
@section Title {
    <h2 class="title">Welcome to Our Grand-Re-Re-Re-Re-Opening!</h2>
    <a asp-page="/Admin/AddEditRecipe" class="add-recipe btn  btn-primary">Add Recipe</a>
}

<div class=" row  blackBoard">
    <div class="col-4">
        <h3 class="burgerDay">
            <u>Burger of the Day</u>
        </h3>
        <br />
        <br />
    </div>
    <div class="col-4 ">
        <h4 class="burgerSpecial">@recipes[rInt].Name</h4>
        <br />
    </div>
    <div class=" col-4">
        <h5 class="burgerPrice">$5.95</h5>
    </div>

</div>
<br />
<div class="row recipes">


    <!--foreach (var recipe in new[] { " Birthday Cake for Fido", "Pumpkin Pie", "apple turnover" }) -->
    @foreach (var recipe in recipes)
    {
        <div class="recipe col-md-4">
            <img class="img img-thumbnail" src="@recipe.GetInlineImageSrc()" />
            <h3><a asp-page="/Recipe" asp-route-id="@recipe.Id">@recipe.Name</a></h3>
            <p>@recipe.Description</p>
        </div>

    }
</div>
